# ============================================================================
# LLM Provider Configuration
# ============================================================================

# Default provider: 'vllm' (local) or 'openrouter' (cloud)
PROVIDER_DEFAULT=vllm

# ============================================================================
# vLLM (Local) Configuration
# ============================================================================
# vLLM provides an OpenAI-compatible API
VLLM_BASE_URL=http://localhost:8000/v1
VLLM_MODEL_NAME=openai/gpt-oss-120b
# vLLM usually doesn't need an API key, but you can set one for auth
VLLM_API_KEY=not-needed

# ============================================================================
# OpenRouter (Cloud) Configuration
# ============================================================================
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL_NAME=openai/gpt-oss-120b

# ============================================================================
# Telegram Bot Configuration
# ============================================================================
TG_BOT_KEY=your_telegram_bot_token_here
# Comma-separated allowed usernames (without @)
TG_WHITELIST=mdsalnikov

# ============================================================================
# Agent Configuration
# ============================================================================
# Retries on failure before giving up (default: 10)
# AGENT_MAX_RETRIES=10
